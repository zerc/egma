import os

conan = SConscript('build/SConscript_conan')
# To install it via Conan you need to add Bintry to your remotes:
# conan remote add public-conan https://api.bintray.com/conan/bincrafters/public-conan 
if "sfml" in conan:
    conan['conan']['LIBS'].extend(['sfml-graphics', 'sfml-window', 'sfml-system'])

env = Environment(**conan['conan'])
env.Program(
    'omega',
    'main.cpp',
    parse_flags='-std=c++17',
)
